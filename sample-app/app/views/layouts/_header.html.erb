<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(".sample_app"), static_pages_home_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("static_pages.home.title"), static_pages_home_path %></li>
        <li><%= link_to t("static_pages.about.title"), static_pages_about_path %></li>
        <li><%= link_to t("static_pages.help.title"), static_pages_help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("users.title"), "#" %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= t "users.acount.title" %><b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><%= link_to t("profile"), current_user %></li>
              <li><%= link_to t("settings"), "#" %></li>
              <li class="divider"></li>
              <li><%= link_to t("logout"), sessions_logout_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("sessions.new.title"), sessions_login_path %></li>
        <% end %>
        <li class="lang">
          <%= t "lang" %>
          <ul>
            <li><%= link_to t("vietnam"), locale: "vi" %></li>
            <li><%= link_to t("english"), locale: "en" %></li>
          </ul>
        </li>
      </ul>
    </nav>
  </div>
</header>
