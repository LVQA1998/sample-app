<%= provide :title, t("static_pages.home.title") %>

<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= t "microposts.micropost_feed" %></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1><%= t "static_pages.home.greeting" %></h1>
    <h2>
      <%= t "static_pages.home.home_page" %>
      <%= link_to t("book.title"), Settings.book.link %>
      <%= t "static_pages.home.application" %>
    </h2>
    <%= link_to t(".signup"), users_signup_path, class: "btn btn-lg btn-primary" %>
  </div>
  <%= link_to image_tag("rails.png", class: "logo", alt: "Rails logo"), Settings.book.link %>
<% end %>
